<header>
  <nav class="navbar navbar-expand navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    
    
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <div class="form-group mb-1">
      <% if (username) { %> 
        <form class="form-inline align-items-baseline" method="POST" action="/logout">
          <h7>Logged In As: <%= username %></h7>
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
      <% } else { %>
        <form class="form-inline" method="POST" action="/login">
          <label for="username"></label>
          <input class="form-control" type="text" name="username" placeholder="Username" style="width: 250px; margin: 1em">
          <button type="submit" class="btn btn-outline-dark">Login</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>